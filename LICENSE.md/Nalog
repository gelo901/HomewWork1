  function bankomat(x){
   
  	for (var i = 0; i <= kupur.length; i++) {
		
		result = Math.floor(x / kupur[i]);
  		x = x - result * kupur[i]; 	 
	if(result > manyNal){
  		
  		return console.log("Не удается выполнить операцию");	
  	}else{
	  	
	  	console.log(kupur[i], result);
  


